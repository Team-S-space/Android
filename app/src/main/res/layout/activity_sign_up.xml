<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signUp_activity"
    android:background="@color/white">

        <EditText
            android:id="@+id/signup_id_et"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="#F5F5F5"
            android:backgroundTint="#F5F5F5"
            android:hint="아이디"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="#BCBCBC"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendardlight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/signup_pw_et"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="#F5F5F5"
            android:backgroundTint="#F5F5F5"
            android:hint="비밀번호"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#BCBCBC"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/pretendardlight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_id_et" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_logo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_bt"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="#E8E8E8"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendardmedium"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="0dp"
            app:cornerRadius="0dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pw_et" />

        <TextView
            android:id="@+id/signup_er_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입 형식에 맞춰 입력해 주세요."
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_pw_et"/>

        <TextView
            android:id="@+id/signUp_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="25dp"
            android:text="아직 회원이 아니신가요?"
            android:textColor="#909090"
            android:fontFamily="@font/pretendardmedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_bt" />

        <TextView
            android:id="@+id/signup_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:text="로그인"
            android:textColor="#909090"
            android:fontFamily="@font/pretendardmedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/signUp_tv2"
            app:layout_constraintTop_toBottomOf="@+id/signup_bt" />

</androidx.constraintlayout.widget.ConstraintLayout>